<%= simple_form_for(@flat) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :price_per_night %>
  <%= f.input :number_of_guests %>
  <%= f.input :photos %>
  <div class="d-flex mt-5">
    <%= f.button :submit, class: 'btn btn-secondary w-50 mr-2' %>
    <%= link_to 'Cancel', flats_path, :class => "btn btn-danger w-50 ml-2"  %>
  </div>
<% end %>
