<div class="navbar navbar-expand-sm navbar-light navbar-lewagon bg-white py-0">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://static9.depositphotos.com/1364916/1110/v/600/depositphotos_11108900-stock-illustration-houses-apartments-with-tree-logo.jpg", :style => "height: 56px" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <form class="form-inline my-2 my-lg-0">
        <input class="form-control mx-1" name="query" type="search" placeholder="Search" aria-label="Search" value="<%= params[:query] %>">
        <button class="btn btn-primary mx-3 text-white my-2 my-sm-0" type="submit">Search</button>
      </form>
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <% if current_user.avatar.present? %>
            <%= cl_image_tag current_user.avatar.key, class: "avatar dropdown-toggle h-100", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
              <%= image_tag "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRS9vVq6mgq8Q3i3rKwV_FUYAGwDhq8VK1x0A&usqp=CAU", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% if policy(Flat).new? %>
              <%= link_to "Add Flat", new_flat_path, class: "dropdown-item" %>
            <% end %>
            <%= link_to "My bookings", "#", class: "dropdown-item" %>
            <%= link_to "My flats", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
